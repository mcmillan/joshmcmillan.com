---
import { twMerge } from "tailwind-merge";

const { class: classOverride, ...props } = Astro.props;
---

<a
  {...props}
  class={twMerge(
    "text-black underline underline-offset-2 decoration-2 hover:opacity-80 focus:bg-black focus:text-white focus:outline focus:outline-black focus:outline-offset-0 focus:outline-2",
    classOverride,
  )}><slot /></a
>

---
import "../styles/global.css";
const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.svg" />

    <title>{title && `${title} | `}Josh McMillan</title>
  </head>
  <body class="p-8 sm:p-12 flex flex-col text-slate-800 bg-slate-100">
    <main class="max-w-2xl">
      <slot />
    </main>
    <footer class="text-center sm:text-left text-slate-400 mt-auto">
      <a href="https://twitter.com/jshmc">Twitter</a>
      &middot;
      <a href="https://github.com/mcmillan">GitHub</a>
      &middot;
      <a href="https://linkedin.com/in/jshmc">LinkedIn</a>
    </footer>
  </body>
</html>
